        <!--<class>ejb.entity.ServeurPhysique</class>-->
        <!--<class>ejb.entity.ServeurVirtuel</class>-->
        <!--<class>ejb.entity.SiteWeb</class>-->
        <!--<class>ejb.entity.Support</class>-->
        <!--<class>ejb.entity.Utilisateur</class>-->
